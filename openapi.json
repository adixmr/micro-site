{
  "openapi": "3.0.0",
  "info": {
    "title": "Verak Backend",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:3001"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/post": {
      "post": {
        "tags": ["Posts"],
        "summary": "Create a new post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "content": "aditya"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "get": {
        "tags": ["Posts"],
        "summary": "Get feed (with filters and sort)",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "description": "Type can be `popular` or `latest`",
            "schema": {
              "type": "string"
            },
            "example": "popular"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of posts to get",
            "schema": {
              "type": "string"
            },
            "example": "10"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Must be greater than 0",
            "schema": {
              "type": "string"
            },
            "example": "1"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/post/like/{PostID}": {
      "post": {
        "tags": ["Posts"],
        "summary": "Like a post",
        "parameters": [
          {
            "name": "PostID",
            "in": "path",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {}
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/post/unlike/{PostID}": {
      "post": {
        "tags": ["Posts"],
